{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@esc/order/api": ["libs/order/api/src/index.ts"],
      "@esc/order/domain": ["libs/order/domain/src/index.ts"],
      "@esc/order/models": ["libs/order/models/src/index.ts"],
      "@esc/product/api": ["libs/product/api/src/index.ts"],
      "@esc/product/domain": ["libs/product/domain/src/index.ts"],
      "@esc/product/models": ["libs/product/models/src/index.ts"],
      "@esc/shared/ui-components": ["libs/shared/ui-components/src/index.ts"],
      "@esc/shared/ui-pipes": ["libs/shared/ui-pipes/src/index.ts"],
      "@esc/shared/util-helpers": ["libs/shared/util-helpers/src/index.ts"],
      "@esc/shared/util-models": ["libs/shared/util-models/src/index.ts"],
      "@esc/user/api": ["libs/user/api/src/index.ts"],
      "@esc/user/domain": ["libs/user/domain/src/index.ts"],
      "@esc/user/models": ["libs/user/models/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
